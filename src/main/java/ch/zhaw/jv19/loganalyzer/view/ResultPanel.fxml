<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ButtonBar?>
<AnchorPane id="resultPanel" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.zhaw.jv19.loganalyzer.view.ResultPanelUIController">
    <children>
        <HBox prefHeight="400.0" prefWidth="352.8" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <TableView fx:id="resultTable" tableMenuButtonVisible="true" HBox.hgrow="ALWAYS" />
                <VBox fx:id="furtherAnalysisPanel" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label text="Further Analysis" />
                        <TextField fx:id="secondsBefore" promptText="Sec before">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </VBox.margin>
                        </TextField>
                        <TextField fx:id="secondsAfter" promptText="Sec after">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" />
                            </VBox.margin>
                        </TextField>
                        <Button mnemonicParsing="false" text="Search">
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </VBox.margin>
                        </Button>
                    </children>
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin>
                    <ButtonBar prefHeight="40.0">
                        <buttons>
                            <Button fx:id="exportButton" mnemonicParsing="false" onAction="#exportResultTable" text="Exportieren" />
                        </buttons>
                        <VBox.margin>
                            <Insets top="10.0" />
                        </VBox.margin>
                    </ButtonBar>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
